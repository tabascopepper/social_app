<li>
  <div>
    <%= comment.body %>
    <%= link_to 'Reply', new_post_comment_path(comment.post, { comment: { parent_id: comment.id } }), class: 'btn btn-secondary' %>

    <% if comment.author == current_user %>
      <%= link_to 'Edit Comment', edit_post_comment_path(comment), class: 'btn btn-secondary', style: 'margin-left: 20px;' %>
      <%= link_to 'Delete Comment', post_comment_path(comment.post, comment), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this comment?" }, class: "btn btn-danger", style: 'margin-left: 20px;' %>
    <% end %>
  </div>
  <% if comment.children.any? %>
    <ul>
      <% comment.children.each do |children| %>
        <%= render partial: "comments/shared/comment", locals: { comment: children } %>
      <% end %>
    </ul>
  <% end %>
</li>
