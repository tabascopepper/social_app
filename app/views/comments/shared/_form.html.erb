<%= form_with(model: [post, comment], local: true) do |form| %>
  <%= form.hidden_field :parent_id, value: parent_id %>

  <div class="field">
    <%= form.label :message %>
    <%= form.text_area :body %>
  </div>

  <div style="margin-top: 50px;"></div>

  <div class="actions">
    <%= form.submit 'Save Comment', class: 'btn btn-primary' %>
  </div>
<% end %>

<div style="margin-top: 50px;"></div>


<% if edit == true %>
  <%= link_to 'Back To Post', post_path(post), class: 'btn btn-secondary' %>
<% end %>
