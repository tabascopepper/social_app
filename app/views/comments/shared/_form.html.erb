<%= form_with(model: [post, comment], local: true) do |form| %>
  <%= form.hidden_field :parent_id, value: parent_id %>

  <%= form.hidden_field :post_id, value: post.id %>

  <div style="margin-top: 50px;" class="field">
    <%= form.label :message %>
    <%= form.text_area :body %>
  </div>

  <div style="margin-top: 50px;" class="actions">
    <%= form.submit 'Save Comment', class: 'btn btn-primary' %>
  </div>
<% end %>

<div style="margin-top: 50px;">
  <% if edit == true %>
    <%= button_to 'Back To Post', post_path(post), method: :get, class: 'btn btn-secondary' %>
  <% end %>
</div>
