<h1><%= resource_post.title %></h1>
<p><%= resource_post.body %></p>

<div style="margin-top: 50px;"></div>

<% if resource_post.author == current_user %>
  <%= link_to 'Edit Post', edit_post_path(resource_post), class: 'btn btn-secondary', style: 'margin-right: 20px;' %>
  <%= link_to 'Delete Post', post_path(resource_post), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this post?" }, class: "btn btn-danger", style: 'margin-right: 20px;' %>
<% end %>

<%= link_to 'Back To All Posts', posts_path, class: 'btn btn-primary' %>

<hr style="margin-top: 50px; margin-bottom: 50px;">

<% resource_post.comments.each do |comment| %>
  <li>
    <%= comment.body %>
    <%= link_to 'Edit Comment', edit_post_comment_path(comment), class: 'btn btn-secondary', style: 'margin-left: 20px;' %>
    <%= link_to 'Delete Comment', post_comment_path(resource_post, comment), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this comment?" }, class: "btn btn-danger", style: 'margin-left: 20px;' %>
  </li>
<% end %>

<div style="margin-top: 50px;"></div>

<%= link_to 'Add Comment', new_post_comment_path(resource_post), class: 'btn btn-primary' %>
