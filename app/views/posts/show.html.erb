<h1><%= post.title %></h1>
<p><%= post.body %></p>

<div style="margin-top: 50px;"></div>

<% if post.author == current_user %>
  <%= link_to 'Edit Post', edit_post_path(post), class: 'btn btn-secondary', style: 'margin-right: 20px;' %>
  <%= link_to 'Delete Post', post_path(post), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this post?" }, class: "btn btn-danger", style: 'margin-right: 20px;' %>
<% end %>

<%= link_to 'Back To All Posts', posts_path, class: 'btn btn-primary' %>

<hr style="margin-top: 50px; margin-bottom: 50px;">

<h2>Comments</h2>

<%= render partial: "comments/shared/form", locals: { post: post, comment: comment, edit: false, parent_id: nil } %>

<ul>
  <% post.comments.where(parent_id: nil).each do |comment| %>
    <%= render partial: "comments/shared/comment", locals: { comment: comment } %>
  <% end %>
</ul>